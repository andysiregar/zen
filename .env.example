# Environment Configuration
NODE_ENV=development
GIN_MODE=debug

# Service Ports (Development)
API_GATEWAY_PORT=8000
TENANT_SERVICE_PORT=8001
AUTH_SERVICE_PORT=8002
DATABASE_SERVICE_PORT=8003
TICKET_SERVICE_PORT=8004
PROJECT_SERVICE_PORT=8005
CHAT_SERVICE_PORT=8006
NOTIFICATION_SERVICE_PORT=8007
FILE_STORAGE_PORT=8008
INTEGRATION_SERVICE_PORT=8009
REPORTING_SERVICE_PORT=8010
BILLING_SERVICE_PORT=8011
BACKGROUND_JOBS_PORT=8012
MONITORING_SERVICE_PORT=8013

# Database Configuration
MASTER_DB_HOST=localhost
MASTER_DB_PORT=5432
MASTER_DB_USER=saas_user
MASTER_DB_PASSWORD=saas_password
MASTER_DB_NAME=master_db
MASTER_DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# External Services
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourdomain.com

# File Storage
STORAGE_TYPE=local # local, s3, gcs
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Requested-With

# Domain Configuration
BASE_DOMAIN=yourdomain.com
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_CHAT=true
ENABLE_BILLING=true
ENABLE_INTEGRATIONS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Background Jobs
QUEUE_URL=redis://localhost:6379
QUEUE_PREFIX=saas
MAX_RETRY_ATTEMPTS=3

# Monitoring
HEALTH_CHECK_INTERVAL=30s
GRACEFUL_SHUTDOWN_TIMEOUT=30s